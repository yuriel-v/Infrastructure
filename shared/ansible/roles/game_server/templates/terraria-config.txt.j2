# Ansible-generated Terraria server configuration file

# MOTD
motd={{ gs_terraria_motd }}

# World settings
world={{ gs_terraria['install_dir'] }}_worlds/{{ gs_terraria['world_name'] }}.wld
worldpath={{ gs_terraria['install_dir'] }}_worlds
autocreate={{ gs_terraria['autocreate_size'] }}
worldname={{ gs_terraria['world_name'] }}
seed={{ gs_terraria['seed'] }}

# General settings
difficulty={{ gs_terraria['difficulty'] }}
maxplayers={{ gs_terraria['max_players'] }}
secure=1
language=en-US
priority=1
banlist=banlist.txt

# Network settings
port=7777
upnp=1
password={{ gs_terraria['password'] }}

# Journey mode settings
journeypermission_time_setfrozen=2
journeypermission_time_setdawn=2
journeypermission_time_setnoon=2
journeypermission_time_setdusk=2
journeypermission_time_setmidnight=2
journeypermission_godmode=1
journeypermission_wind_setstrength=0
journeypermission_rain_setstrength=0
journeypermission_time_setspeed=2
journeypermission_rain_setfrozen=0
journeypermission_wind_setfrozen=0
journeypermission_increaseplacementrange=2
journeypermission_setdifficulty=2
journeypermission_biomespread_setfrozen=2
journeypermission_setspawnrate=0